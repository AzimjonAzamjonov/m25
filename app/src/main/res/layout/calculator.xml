<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:paddingRight="20dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:id="@+id/edit1"
        android:gravity="right|center"
        android:hint="123"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/edit1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="right|center"
        android:text="234"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:id="@+id/result"
        android:paddingEnd="20dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:id="@+id/clear"
            android:textColor="@color/white"
            app:layout_constraintRight_toLeftOf="@id/bacspace"
            android:textSize="30sp"
            android:background="@drawable/btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="CLEAR"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="bacspace"
            android:id="@+id/bacspace"
            android:background="@drawable/btn"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@id/clear"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/yetti"
            app:layout_constraintTop_toBottomOf="@id/clear"
            android:text="7"
            app:layout_constraintRight_toLeftOf="@id/sakkiz"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/sakkiz"
            app:layout_constraintLeft_toRightOf="@id/yetti"
            app:layout_constraintTop_toBottomOf="@id/clear"
            android:text="8"
            android:textSize="30sp"
            app:layout_constraintRight_toLeftOf="@id/toqqiz"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/toqqiz"
            app:layout_constraintLeft_toRightOf="@id/sakkiz"
            app:layout_constraintTop_toBottomOf="@id/clear"
            android:text="9"
            app:layout_constraintRight_toLeftOf="@id/bolish"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/bolish"
            app:layout_constraintLeft_toRightOf="@id/toqqiz"
            app:layout_constraintTop_toBottomOf="@id/clear"
            android:text=" / "
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/tort"
            app:layout_constraintTop_toBottomOf="@id/yetti"
            android:text="4"
            app:layout_constraintRight_toLeftOf="@id/besh"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/besh"
            app:layout_constraintLeft_toRightOf="@id/yetti"
            app:layout_constraintTop_toBottomOf="@id/sakkiz"
            android:text="5"
            android:textSize="30sp"
            app:layout_constraintRight_toLeftOf="@id/olti"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/olti"
            app:layout_constraintLeft_toRightOf="@id/besh"
            app:layout_constraintTop_toBottomOf="@id/toqqiz"
            android:text="6"
            app:layout_constraintRight_toLeftOf="@id/kopaytirish"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/kopaytirish"
            app:layout_constraintLeft_toRightOf="@id/olti"
            app:layout_constraintTop_toBottomOf="@id/bolish"
            android:text=" * "
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/bir"
            app:layout_constraintTop_toBottomOf="@id/tort"
            android:text="1"
            app:layout_constraintRight_toLeftOf="@id/ikki"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/ikki"
            app:layout_constraintLeft_toRightOf="@id/bir"
            app:layout_constraintTop_toBottomOf="@id/besh"
            android:text="2"
            android:textSize="30sp"
            app:layout_constraintRight_toLeftOf="@id/uch"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/uch"
            app:layout_constraintLeft_toRightOf="@id/ikki"
            app:layout_constraintTop_toBottomOf="@id/olti"
            android:text="3"
            app:layout_constraintRight_toLeftOf="@id/ayirish"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/ayirish"
            app:layout_constraintLeft_toRightOf="@id/uch"
            app:layout_constraintTop_toBottomOf="@id/kopaytirish"
            android:text=" - "
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/nol"
            app:layout_constraintTop_toBottomOf="@id/bir"
            android:text="0"
            app:layout_constraintRight_toLeftOf="@id/nuqta"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/nuqta"
            app:layout_constraintLeft_toRightOf="@id/nol"
            app:layout_constraintTop_toBottomOf="@id/ikki"
            android:text="."
            android:textSize="30sp"
            app:layout_constraintRight_toLeftOf="@id/teng"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/teng"
            app:layout_constraintLeft_toRightOf="@id/nuqta"
            app:layout_constraintTop_toBottomOf="@id/uch"
            android:text="="
            app:layout_constraintRight_toLeftOf="@id/qoshish"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/qoshish"
            app:layout_constraintLeft_toRightOf="@id/teng"
            app:layout_constraintTop_toBottomOf="@id/ayirish"
            android:text=" + "
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="30sp"
            android:textColor="@color/white"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>